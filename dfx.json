{
  "version": 1,
  "canisters": {
    "internet_identity": {
      "type": "custom",
      "candid": "https://github.com/dfinity/internet-identity/releases/latest/download/internet_identity.did",
      "wasm": "https://github.com/dfinity/internet-identity/releases/latest/download/internet_identity_dev.wasm.gz"
    },

    "subscription_manager": {
      "type": "motoko",
      "main": "backend/subscription_manager/main.mo"
    },
    "wallet_manager": {
      "type": "motoko", 
      "main": "backend/wallet_manager/main.mo"
    },

    "payment_processor": {
      "type": "motoko",
      "main": "backend/payment_processor/main.mo"
    },
    "okx_integration": {
      "type": "motoko",
      "main": "backend/okx_integration/main.mo"
    },
    "bitsub_frontend": {
      "type": "assets",
      "source": ["frontend/dist"],
      "dependencies": ["subscription_manager", "wallet_manager", "payment_processor", "okx_integration"]
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943",
      "type": "ephemeral",
      "replica": {
        "subnet_type": "system",
        "max_ingress_message_size": 6291456
      },
      "bootstrap": {
        "ip": "127.0.0.1",
        "port": 4943
      }
    },
    "ic": {
      "providers": ["https://icp0.io"],
      "type": "persistent"
    }
  },
  "output_env_file": "frontend/.env",
  "generate": {
    "declarations": "frontend/src/declarations"
  }
}